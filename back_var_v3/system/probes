FoamFile
{
    format      ascii;
    class       dictionary;
    location    "system";
    object      probes;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

probes
{
    type            probes;
    functionObjectLibs ("libsampling.so");
    writeControl   timeStep;
    writeInterval  1;

    fields
    (
        p
        U.air
    );

    #include "system/probeLocations"
}


